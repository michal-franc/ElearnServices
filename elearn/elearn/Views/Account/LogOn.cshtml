@model elearn.Models.LogOnModel
           
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@{
    ViewBag.Title = "Welcome";
}

@using (Html.BeginForm())
{


<div id="login_box" class="round_all clearfix">

    @Html.WrapedInLabel(Html.TextBoxFor(m => m.UserName), new { @class = "fields" }, new { @class = "indent round_all" })
    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "fields" })
    @Html.WrapedInLabel(Html.TextBoxFor(m => m.Password), new { @class = "fields" }, new { @class = "indent round_all" , @type="password" })
    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "fields" })
	<button class="button_colour round_all" type="submit" ><img width="24" height="24" alt="Locked 2" src="@Url.Content("~/Content/Adminica/images/icons/small/white/locked_2.png")"><span>Login</span></button>

    <div id="bar" class="round_bottom">
        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.LabelFor(m => m.RememberMe)
		<a href="#">Forgot your password?</a>
	</div>		
	<a href="#" id="login_logo"><span>Adminica</span></a>
</div>
@Html.KeyedValidationSummary("alert alert_red alert_box", @Url.Content("~/Content/Adminica/images/icons/small/white/alert_2.png"), new Dictionary<string, object> { { "style", "margin:1% auto 5px;" } })
}
<div id="loading_overlay">
	<div class="loading_message round_bottom">Loading...</div>
</div>
