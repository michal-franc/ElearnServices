@model NHiberanteDal.DTO.TestDto
@if (Model.Questions != null)
{
    for (int i = 0; i < Model.Questions.Count; i++)
    {
    <li class="ui-accordion-li-fix">
        <h3 class="bar ui-accordion-header ui-helper-reset ui-state-default ui-corner-all"
            role="tab" aria-expanded="true" tabindex="0">
            @Html.DisplayFor(model => model.Questions[i].QuestionLabel)
        </h3>
        <div class="content ui-accordion-content ui-helper-reset ui-widget-content ui-corner-bottom"
            role="tabpanel" style="display: none;">
            <div style="height: 250px;">
                <div class="flat_area grid_8">
                    <h2>
                        Question</h2>
                     @Html.HiddenFor(m=>m.Questions[i].ID)
                    <div class="textyConvert">
                        @Html.Raw(Model.Questions[i].QuestionText)
                    </div>
                </div>
                <div class="flat_area grid_8">
                    <h2>
                        Answers</h2>
                        @for(int j = 0; j < Model.Questions[i].Answers.Count; j++)
                        {
                            <div id="test-question-answer">
                                @Html.HiddenFor(m => m.Questions[i].Answers[j].Correct)
                                @Html.HiddenFor(m => m.Questions[i].Answers[j].ID)
                                @Html.CheckBoxFor(model => model.Questions[i].Answers[j].IsSelected)
                                @Model.Questions[i].Answers[j].Text
                            </div>
                        }
                </div>
            </div>
        </div>
    </li>
    }
}
