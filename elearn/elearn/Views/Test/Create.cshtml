@model NHiberanteDal.DTO.TestDto

@{
    ViewBag.Title = "Create";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TestType.ID)
    <input id="itemid" name="itemid" type="hidden" value="@ViewBag.ItemId" />
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
                <div class="editor-label">
            @Html.LabelFor(model => model.TestType)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.TestType.TypeName)
        </div>
    </fieldset>
    
        <button class="button_colour" value="Save" type="submit">
        <img height="24" width="24" alt="Bended Arrow Right" src="@Url.Content("~/Content/Adminica/images/icons/small/white/bended_arrow_right.png")">
        <span>Create</span>
    </button>

}
