@model NHiberanteDal.DTO.TestDto

@{
    ViewBag.Title = "DoTest";
}


@for(int i=0;i<Model.Questions.Count;i++)
{
    <div id="test-question">
        <div id="test-question-title">
            @Html.LabelFor(m =>m.Questions[i].QuestionText)
            <br />
            @Model.Questions[i].QuestionText
        </div>
       @for(int k=0;k<Model.Questions[i].Answers.Count;k++)
        {
            <div id="test-question-answer">
                @Model.Questions[i].Answers[k].Text &nbsp;
                @Html.CheckBoxFor(m => m.Questions[i].Answers[k].Correct)
            </div>
        }
    </div> 
<button>Save</button>
}

